doctype html
html
  head
    meta(charset='utf-8')

    meta(http-equiv='Expires' content='0')
    
    meta(name='description' content='哈哈优选提供#{tagName}小程序大全，定期推送好用的#{tagName}微信小程序，识别小程序二维码即可体验！')
    
    meta(name='keywords' content='#{tagName}小程序,#{tagName}微信小程序,#{tagName}小程序二维码')
    
    meta(name='applicable-device' content='pc,mobile')
    
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no')
    
    meta(name='format-detection' content='telephone=no')
    
    link(href='style/home.css' rel='stylesheet' type='text/css')

    link(href="favicon.ico" rel="shortcut icon")
    
    title #{tagName}小程序大全_#{tagName}微信小程序二维码_哈哈优选
  body#body
    header
      h1.title 小程序商店
    .banner
      nav
        a(href='http://www.hahayx.com/') 首页
        for t,n in tMap
          if n == tid
            a.active(href='http://www.hahayx.com/tag-#{n}-1.html') #{tMap[n]}
          else
            a(href='http://www.hahayx.com/tag-#{n}-1.html') #{tMap[n]}
    .mod-app-container
      .line
      
      ul.mod-app-list
        for d in list
          li.detailLi(data-appid='#{d.id}')
            a.icon-app(href='http://www.hahayx.com/xcx-#{d.id}.html')
              img(style='width:52px;height:52px;' src='#{d.icon.image}' alt='#{d.name}小程序')
                    
            .app-content
              a.link_title(href='http://www.hahayx.com/xcx-#{d.id}.html') #{d.name}
              span.appinfo #{d.description}
                          
              p.c-tx1
                for tt in d.tag
                  a(href='tag-#{tt.id}-1.html') #{tt.name}
                    
            a.btn-green(data-code='image/icon-2.png' href='http://www.hahayx.com/xcx-#{d.id}.html') 打开 
      div.pagination
        for i in arr
          if i == pn
            span.current #{i}
          else
            a(href='http://www.hahayx.com/tag-#{tid}-#{i}.html') #{i}
  script(src="js/dc.js")